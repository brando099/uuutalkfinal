<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.keeponline.telegram.mapper.UserTaskMapper">
    <!--查询单个-->
    <select id="getByUidAndCvsTypeAndStatus" resultType="cn.keeponline.telegram.entity.UserTask">
        select * from user_task where uid = #{uid}
        <if test="cvsType != null">
            and cvs_type = #{cvsType}
        </if>
        <if test="status != null">
            and status = #{status}
        </if>
        limit 1
    </select>

    <select id="listByUidAndStatus" resultType="cn.keeponline.telegram.entity.UserTask">
        select * from user_task where uid = #{uid}
        and status = #{status}
    </select>

    <select id="listByUid" resultType="cn.keeponline.telegram.entity.UserTask">
        select * from user_task where uid = #{uid}
    </select>

    <select id="getByStatus" resultType="cn.keeponline.telegram.entity.UserTask">
        select * from user_task where status = #{status}
    </select>

    <delete id="deleteByUidsAndCvsType">
        delete from user_task where uid in
        <foreach collection="uids"
                 item="uid"
                 open="("
                 separator=","
                 close=")">
            #{uid}
        </foreach>
        and cvs_type = #{cvsType}
    </delete>

    <update id="updateFrequency">
        update user_task set send_interval = #{sendInterval}
        where uid in
        <foreach collection="uids"
                 item="uid"
                 open="("
                 separator=","
                 close=")">
            #{uid}
        </foreach>
        and cvs_type = #{cvsType}
    </update>

    <select id="getByAccountIdAndUidAndCvsType" resultType="cn.keeponline.telegram.entity.UserTask">
        select * from user_task where account_id = #{accountId} and uid = #{uid}
        <if test="cvsType != null">
            and cvs_type = #{cvsType}
        </if>
        limit 1
    </select>


</mapper>