<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.keeponline.telegram.mapper.MessageMapper">
    <select id="listByUserId" resultType="cn.keeponline.telegram.entity.Message">
        select *
        from message
        where user_id = #{userId}
        and other_id != #{userId}
        order by send_time desc
    </select>

    <select id="listByUserIdAndOtherId" resultType="cn.keeponline.telegram.entity.Message">
        select *
        from message
        where user_id = #{userId}
          and other_id = #{otherId}
        order by send_time desc
    </select>

    <select id="listByUserIdAndOtherIdLimit1" resultType="cn.keeponline.telegram.entity.Message">
        select *
        from message
        where user_id = #{userId}
          and other_id = #{otherId}
        order by send_time desc
        limit 1
   </select>

    <select id="listByUserId2" resultType="cn.keeponline.telegram.entity.Message">
        select *
        from message
        where message_content = ${messageContent}
    </select>
</mapper>